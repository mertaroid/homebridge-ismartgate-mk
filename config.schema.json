{
  "pluginAlias": "iSmartGate Light",
  "pluginType": "accessory",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Accessory Name",
        "type": "string",
        "required": true,
        "default": "iSmartGate",
        "description":"The name of your device to show in the Home app",
             "minLength": 1,
             "required": true
      },
      "hostname":{
         "title":"iSmartGate Hostname",
         "type":"string",
         "format":"string",
         "placeholder":"ismartgate",
         "description":"The hostname of your device (e.g. ismartgate.local) or the IP address (e.g. 192.168.1.32)",
         "minLength": 1,
         "required": true
      },
      "username":{
         "title":"Username",
         "type":"string",
         "format":"string",
         "placeholder":"admin",
         "description": "Default: admin",
         "minLength": 1,
         "required": true
      },
     "password":{
        "title":"Password",
        "type":"string",
        "format":"password",
        "description": "Configured during device setup",
        "minLength": 1,
        "required": true
     },
     "debug":{
            "title":"Debug Mode",
            "type":"boolean",
            "description":"Shows additional logging (can be helpful for diagnosing issues)"
         }
    }
  }
}
